<div class="row admin-subscribes-field">
<div class="small-12 columns">
<h3 class="blog-title"><%= t('admin.subscribes') %></h3>
<table width="100%">
<thead>
<tr>
<th><%= t('admin.subscribes_head.email') %></th>
<th><%= t('admin.subscribes_head.enable') %></th>
<th><%= t('admin.subscribes_head.created_at') %></th>
<th><%= t('admin.subscribes_head.operation') %></th>
</tr></thead><tbody>
<% @subscribes.each do |subscribe|
 %><tr>
<td>
<%= mail_to subscribe.email %>
</td><td>
<%= subscribe.enable %>
</td><td>
<%= format_time(subscribe.created_at) %>
</td><td>
<% if subscribe.enable
 %><%= link_to t('admin.subscribes_head.op.disable'), disable_admin_subscribe_path(subscribe), method: 'POST', data: { confirm: 'Confirm?' } %>
<% else
 %><%= link_to t('admin.subscribes_head.op.enable'), enable_admin_subscribe_path(subscribe), method: 'POST', data: { confirm: 'Confirm?' } %>
<% end %></td></tr><% end %></tbody></table><%= paginate @subscribes %>
</div></div>
