<% content_for(:title) do
 %><%= t('title.timeline') %>
<% end %><div class="row">
<div class="small-12 large-9 large-centered columns">
<ul class="archives-field">
<div class="search-wrapper">
<% _slim_controls1 = form_with url: archives_path, method: 'GET' do |f|
 %><%= f.search_field :q, value: @q, placeholder: t('archive.search') %>
<% end %><%= _slim_controls1 %></div><% @posts.each do |post|
 %><li>
<% _slim_controls2 = link_to blog_path(post), class: 'blog-title' do
 %><%= search_highlight(post.title, @q) %>
<% end %><%= _slim_controls2 %><p class="tags-field">
<i class="fi-calendar">
</i><span>
<%= format_date(post.created_at) %>
</span><i class="fi-pricetag-multiple">
</i><span>
<%= post.labels_content %>
</span><i class="fi-torsos">
</i><span>
<%= post.visited_count %>
</span><i class="fi-heart">
</i><span>
<%= post.liked_count %>
</span></p></li><% end; if @q.present?
 %><div class="search-result-wrapper">
<p class="text-muted">共 <%= @q_size || 0 %> 条结果</p>
</div><% end %></ul><%= paginate @posts, q: @q %>
</div></div>
